<% if @products.any? %>
	<% @products.inject(1) do |num, product| %>
		<div class="product">
		  <div class="number"><%= "#{num}." %></div>
			<%#= link_to image_tag("/#{product.photo}",
									alt: short_name(product.name)),
			 						product%>
			<div class="data">
				<%= link_to product.name, product, class: 'product_name' %>
			</div>
		</div>
		<% if num % 3 == 0 %>
		<br class="unfloat">
	  <% end %>
	<% num += 1 %>
	<% end %>
<% end %>
